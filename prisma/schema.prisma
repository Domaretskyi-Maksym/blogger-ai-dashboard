generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

model User {
	id      String   @id @default(cuid())
	email   String   @unique
	metrics Metric[]
}

model Metric {
	id         String   @id @default(cuid())
	platform   String // e.g., "instagram"
	engagement Int // Лайки/коменти
	reach      Int // Охоплення
	topic      String? // Тема контенту
	userId     String
	user       User     @relation(fields: [userId], references: [id])
	createdAt  DateTime @default(now())
}
